{
  "name": "@poncho-ai/cli",
  "version": "0.6.2",
  "description": "CLI for building and deploying AI agents",
  "repository": {
    "type": "git",
    "url": "https://github.com/latitude-dev/poncho-ai.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "poncho": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/"
