    "dotenv": "^16.4.0",
    "esbuild": "^0.25.9",
    "ink": "^6.7.0",
    "marked": "^17.0.2",
    "react": "^19.2.4",
    "react-devtools-core": "^6.1.5",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "tsup": "^8.0.0",
    "vitest": "^1.4.0"
